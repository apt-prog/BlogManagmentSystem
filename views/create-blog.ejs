    <!-- Confirmation Modal (Now acts as "Are you sure?") -->
    <div id="confirmation-modal" class="full-page-modal">
        <div class="modal-content bg-white dark:bg-gray-800 p-8 rounded-lg shadow-lg text-center max-w-sm mx-auto">
            <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-4">Confirm Blog Submission</h3>
            <p class="text-gray-700 dark:text-gray-300 mb-6">Are you sure you want to add this blog post?</p>
            <div class="flex justify-center space-x-4">
                <button id="confirm-cancel-btn"
                    class="px-6 py-3 bg-gray-200 text-gray-800 font-semibold rounded-lg shadow-md hover:bg-gray-300 transition-colors duration-200">
                    Cancel
                </button>
                <button id="confirm-ok-btn"
                    class="px-6 py-3 bg-blue-500 text-white font-semibold rounded-lg shadow-md hover:bg-blue-600 transition-colors duration-200">
                    Confirm
                </button>
            </div>
        </div>
    </div>

    <script>
        // Theme Toggle Functionality (Copied from your dashboard)
        const themeToggle = document.getElementById('theme-toggle');
        const sunIcon = document.getElementById('sun-icon');
        const moonIcon = document.getElementById('moon-icon');
        const html = document.documentElement;

        const currentTheme = localStorage.getItem('theme') || 'light';
        if (currentTheme === 'dark') {
            html.classList.add('dark');
            sunIcon.classList.add('hidden');
            moonIcon.classList.remove('hidden');
        }
        themeToggle.addEventListener('click', () => {
            html.classList.toggle('dark');
            if (html.classList.contains('dark')) {
                localStorage.setItem('theme', 'dark');
                sunIcon.classList.add('hidden');
                moonIcon.classList.remove('hidden');
            } else {
                localStorage.setItem('theme', 'light');
                sunIcon.classList.remove('hidden');
                moonIcon.classList.add('hidden');
            }
        });

        // Mobile Menu Toggle (Copied from your dashboard)
        const mobileMenuButton = document.getElementById('mobile-menu-button');
        const mobileMenu = document.getElementById('mobile-menu');
        mobileMenuButton.addEventListener('click', () => {
            mobileMenu.classList.toggle('hidden');
        });
        document.addEventListener('click', (e) => {
            if (!mobileMenuButton.contains(e.target) && !mobileMenu.contains(e.target)) {
                mobileMenu.classList.add('hidden');
            }
        });

        // Scroll to Top Button Functionality (Copied from your dashboard)
        const scrollToTopBtn = document.getElementById('scroll-to-top');
        window.addEventListener('scroll', () => {
            if (window.pageYOffset > 300) {
                scrollToTopBtn.classList.add('show');
            } else {
                scrollToTopBtn.classList.remove('show');
            }
        });
        scrollToTopBtn.addEventListener('click', () => {
            window.scrollTo({
                top: 0,
                behavior: 'smooth'
            });
        });

        // Create Blog Modal Functionality
        const createNewBlogBtn = document.getElementById('create-new-blog-btn');
        const createBlogModal = document.getElementById('create-blog-modal');
        const closeCreateBlogModalBtn = document.getElementById('close-create-blog-modal');
        const blogPostForm = document.getElementById('blog-post-form');
        const previewBtn = document.getElementById('preview-btn');
        const editBtn = document.getElementById('edit-btn');
        const submitPreviewBtn = document.getElementById('submit-preview-btn');

        // View elements
        const formView = document.getElementById('form-view');
        const previewView = document.getElementById('preview-view');

        // Preview elements
        const previewFullImage = document.getElementById('preview-full-image');
        const previewFullCategory = document.getElementById('preview-full-category');
        const previewFullHeading = document.getElementById('preview-full-heading');
        const previewFullIntro = document.getElementById('preview-full-intro');
        const previewFullContent = document.getElementById('preview-full-content');

        // Form input elements
        const blogCategoryInput = document.getElementById('blog-category');
        const blogHeadingInput = document.getElementById('blog-heading');
        const blogIntroInput = document.getElementById('blog-intro');
        const blogContentInput = document.getElementById('blog-content');
        const blogImageLinkInput = document.getElementById('blog-image-link');

        createNewBlogBtn.addEventListener('click', () => {
            createBlogModal.classList.add('show');
            // Reset form and show form view when opening
            blogPostForm.reset();
            showFormView();
        });

        closeCreateBlogModalBtn.addEventListener('click', () => {
            createBlogModal.classList.remove('show');
        });

        // Close modal when clicking outside content
        createBlogModal.addEventListener('click', (e) => {
            if (e.target === createBlogModal) {
                createBlogModal.classList.remove('show');
            }
        });

        // Show form view
        function showFormView() {
            formView.classList.remove('hidden');
            previewView.classList.add('hidden');
        }

        // Show preview view
        function showPreviewView() {
            formView.classList.add('hidden');
            previewView.classList.remove('hidden');
            updateFullPreview();
        }

        // Update full preview
        function updateFullPreview() {
            previewFullCategory.textContent = blogCategoryInput.value || 'Category';
            previewFullHeading.textContent = blogHeadingInput.value || 'Blog Post Heading';
            previewFullIntro.textContent = blogIntroInput.value || 'This is a small introduction to your blog post.';
            previewFullContent.textContent = blogContentInput.value || 'Your blog content will appear here...';

            if (blogImageLinkInput.value) {
                previewFullImage.src = blogImageLinkInput.value;
                previewFullImage.style.display = 'block';
                // Handle image loading errors for preview
                previewFullImage.onerror = () => {
                    previewFullImage.src = '/placeholder.svg?height=256&width=512';
                    previewFullImage.style.display = 'block';
                };
            } else {
                previewFullImage.src = '/placeholder.svg?height=256&width=512';
                previewFullImage.style.display = 'block';
            }
        }

        // Preview button functionality
        previewBtn.addEventListener('click', () => {
            if (!validateForm()) {
                alert('Please fill in all required fields before previewing.');
                return;
            }
            showPreviewView();
        });

        // Edit button functionality
        editBtn.addEventListener('click', () => {
            showFormView();
        });

        // Submit preview button functionality
        submitPreviewBtn.addEventListener('click', () => {
            showConfirmationModal();
        });

        // Form validation
        function validateForm() {
            const requiredFields = ['blog-category', 'blog-heading', 'blog-intro', 'blog-content', 'blog-image-link'];
            let isValid = true;

            requiredFields.forEach(fieldId => {
                const field = document.getElementById(fieldId);
                if (!field.value.trim()) {
                    field.classList.add('border-red-500');
                    isValid = false;
                } else {
                    field.classList.remove('border-red-500');
                }
            });

            return isValid;
        }

        // Confirmation Modal Functionality
        const confirmationModal = document.getElementById('confirmation-modal');
        const confirmOkBtn = document.getElementById('confirm-ok-btn');
        const confirmCancelBtn = document.getElementById('confirm-cancel-btn');

        function showConfirmationModal() {
            confirmationModal.classList.add('show');
        }

        function hideConfirmationModal() {
            confirmationModal.classList.remove('show');
        }

        confirmCancelBtn.addEventListener('click', () => {
            hideConfirmationModal();
        });

        confirmOkBtn.addEventListener('click', () => {
            hideConfirmationModal();
            // Submit form to /submitblog route
            blogPostForm.submit();
        });
    </script>
