    <style>
        .nav-link {
            position: relative;
            overflow: hidden;
        }

        .nav-link::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: -100%;
            width: 100%;
            height: 2px;
            background: linear-gradient(90deg, #3b82f6, #1e40af);
            transition: left 0.3s ease-in-out;
        }

        .nav-link:hover::after {
            left: 0;
        }

        .search-focus:focus {
            box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
        }

        .post-card {
            transition: all 0.3s ease;
        }

        .post-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
        }

        .fade-in {
            animation: fadeIn 0.5s ease-in;
        }

        @keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(20px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .modal {
            backdrop-filter: blur(4px);
        }

        .modal-content {
            animation: modalSlideIn 0.3s ease-out;
        }

        @keyframes modalSlideIn {
            from {
                opacity: 0;
                transform: scale(0.9) translateY(-20px);
            }

            to {
                opacity: 1;
                transform: scale(1) translateY(0);
            }
        }

        /* Scroll to Top Button Styles */
        .scroll-to-top {
            position: fixed;
            bottom: 2rem;
            right: 2rem;
            width: 3.5rem;
            height: 3.5rem;
            background: linear-gradient(135deg, #3b82f6, #1e40af);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            transition: all 0.3s ease;
            opacity: 0;
            visibility: hidden;
            transform: translateY(20px);
            z-index: 1000;
            box-shadow: 0 4px 12px rgba(59, 130, 246, 0.3);
        }

        .scroll-to-top.show {
            opacity: 1;
            visibility: visible;
            transform: translateY(0);
        }

        .scroll-to-top:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 20px rgba(59, 130, 246, 0.4);
        }

        .scroll-to-top:active {
            transform: translateY(-1px);
        }

        .scroll-to-top svg {
            width: 1.5rem;
            height: 1.5rem;
            color: white;
            transition: transform 0.2s ease;
        }

        .scroll-to-top:hover svg {
            transform: translateY(-2px);
        }

        /* Dark mode adjustments for scroll button */
        .dark .scroll-to-top {
            background: linear-gradient(135deg, #4f46e5, #3730a3);
            box-shadow: 0 4px 12px rgba(79, 70, 229, 0.3);
        }

        .dark .scroll-to-top:hover {
            box-shadow: 0 8px 20px rgba(79, 70, 229, 0.4);
        }

        /* Responsive adjustments */
        @media (max-width: 768px) {
            .scroll-to-top {
                bottom: 1.5rem;
                right: 1.5rem;
                width: 3rem;
                height: 3rem;
            }

            .scroll-to-top svg {
                width: 1.25rem;
                height: 1.25rem;
            }
        }

        /* Full-page modal specific styles */
        .full-page-modal {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.7);
            display: flex;
            align-items: center;
            justify-content: center;
            z-index: 1000;
            opacity: 0;
            visibility: hidden;
            transition: opacity 0.3s ease, visibility 0.3s ease;
        }

        .full-page-modal.show {
            opacity: 1;
            visibility: visible;
        }

        .full-page-modal-content {
            background-color: white;
            border-radius: 0.75rem;
            box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
            width: 90vw;
            height: 85vh;
            max-width: 1000px;
            max-height: 700px;
            display: flex;
            flex-direction: column;
            overflow: hidden;
            animation: modalSlideIn 0.3s ease-out;
            position: relative;
        }

        .dark .full-page-modal-content {
            background-color: #1f2937;
        }

        /* Ensure inner sections fit perfectly without scroll */
        .modal-scroll-area {
            overflow: hidden;
            padding: 1rem;
            /* p-4 */
            height: calc(100% - 60px);
            /* Account for header height */
            max-height: calc(100% - 60px);
        }

        /* Add scroll for small devices */
        @media (max-width: 768px) {
            .modal-scroll-area {
                overflow-y: auto;
                padding: 0.75rem;
            }
        }

        @media (max-width: 1024px) {
            .full-page-modal-content {
                flex-direction: column;
                width: 95vw;
                height: 90vh;
                max-height: 600px;
            }

            .modal-scroll-area {
                padding-bottom: 0;
                height: calc(100% - 50px);
                max-height: calc(100% - 50px);
            }

            .modal-scroll-area:last-child {
                padding-top: 0;
            }
        }

        @media (max-width: 768px) {
            .full-page-modal-content {
                width: 98vw;
                height: 95vh;
                max-height: 500px;
            }

            .modal-scroll-area {
                height: calc(100% - 45px);
                max-height: calc(100% - 45px);
                overflow-y: auto;
                padding: 0.75rem;
            }
        }

        /* Custom scrollbar for Webkit browsers */
        .modal-scroll-area::-webkit-scrollbar {
            width: 6px;
            height: 6px;
        }

        .modal-scroll-area::-webkit-scrollbar-track {
            background: #f1f1f1;
            /* Light mode track */
            border-radius: 8px;
        }

        .modal-scroll-area::-webkit-scrollbar-thumb {
            background: #c1c1c1;
            /* Light mode thumb */
            border-radius: 8px;
        }

        .modal-scroll-area::-webkit-scrollbar-thumb:hover {
            background: #a8a8a8;
        }

        .dark .modal-scroll-area::-webkit-scrollbar-track {
            background: #374151;
            /* Dark mode track */
        }

        .dark .modal-scroll-area::-webkit-scrollbar-thumb {
            background: #6b7280;
            /* Dark mode thumb */
        }

        .dark .modal-scroll-area::-webkit-scrollbar-thumb:hover {
            background: #9ca3af;
        }

        /* Mobile-specific scrollbar styling */
        @media (max-width: 768px) {
            .modal-scroll-area::-webkit-scrollbar {
                width: 4px;
            }

            .modal-scroll-area::-webkit-scrollbar-thumb {
                background: #d1d5db;
            }

            .dark .modal-scroll-area::-webkit-scrollbar-thumb {
                background: #4b5563;
            }
        }
    </style>
</head>

