            class="md:hidden hidden bg-white dark:bg-gray-800 border-t border-gray-200 dark:border-gray-700">
            <div class="px-2 pt-2 pb-3 space-y-1">
                <a href="/dashboard"
                    class="nav-link text-blue-500 dark:text-blue-400 px-3 py-2 text-sm font-medium transition-colors duration-200">Dashboard</a>
                <a href="/create-blog"
                    class="block px-3 py-2 text-gray-700 dark:text-gray-300 hover:text-blue-500 dark:hover:text-blue-400 hover:bg-gray-50 dark:hover:bg-gray-700 rounded-md transition-colors duration-200">Create
                    Blogs</a>
                <a href="/allblogs"
                    class="block px-3 py-2 text-gray-700 dark:text-gray-300 hover:text-blue-500 dark:hover:text-blue-400 hover:bg-gray-50 dark:hover:bg-gray-700 rounded-md transition-colors duration-200">All
                    Blogs
                </a>
                <a href="/aboutus"
                    class="block px-3 py-2 text-gray-700 dark:text-gray-300 hover:text-blue-500 dark:hover:text-blue-400 hover:bg-gray-50 dark:hover:bg-gray-700 rounded-md transition-colors duration-200">About
                    Us</a>
                <a href="/contactus"
                    class="block px-3 py-2 text-gray-700 dark:text-gray-300 hover:text-blue-500 dark:hover:text-blue-400 hover:bg-gray-50 dark:hover:bg-gray-700 rounded-md transition-colors duration-200">Contact
                    Us</a>
                <div class="flex space-x-2 px-3 py-2">
                    <a href="/logout" id="mobile-login-btn"
                        class="flex-1 text-center px-3 py-2 text-sm font-medium text-red-500 hover:text-white hover:bg-red-600 border border-red-500 hover:border-red-600 rounded-lg transition-colors duration-200">
